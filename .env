# ===== CONFIGURAÇÕES OTIMIZADAS DA API DETECTOR INTELIGENTE v7.3.4 =====

# === AUTENTICAÇÃO API KEY ===
API_KEY_ENABLED=true
API_KEYS=demo_key_123,test_key_456,prod_key_789
API_KEY_HEADER=X-API-Key
REQUIRE_API_KEY_FOR_ANALYZE=true

# === CONFIGURAÇÕES GERAIS ===
API_VERSION=7.3.4-optimized
API_NAME=Detector Inteligente API Otimizado
MAX_FILE_SIZE=52428800
PORT=5000
DEBUG_MODE=false

# === ANÁLISE DE OCIOSIDADE OTIMIZADA ===
# Thresholds calibrados baseados em testes reais
IDLENESS_THRESHOLD_CRITICAL=90
IDLENESS_THRESHOLD_HIGH=75
IDLENESS_THRESHOLD_MODERATE=60
IDLENESS_THRESHOLD_LOW=40

# Configurações de análise visual otimizadas
VISUAL_SAMPLE_SIZE=5000
VISUAL_COMPARISON_STEP=500
VISUAL_MULTIPLE_SAMPLES=3
VISUAL_NOISE_THRESHOLD=15
VISUAL_SIGNIFICANT_CHANGE_THRESHOLD=25

# Algoritmo de similaridade
SIMILARITY_ALGORITHM=hybrid
SIMILARITY_WEIGHT_IDENTICAL=0.4
SIMILARITY_WEIGHT_AVERAGE=0.3
SIMILARITY_WEIGHT_SIGNIFICANT=0.3
SIMILARITY_NOISE_FILTER=true

# Ajustes temporais e de contexto
TIME_ADJUSTMENT_THRESHOLD_MINUTES=5
TIME_ADJUSTMENT_FACTOR=0.2
SIZE_DIFF_THRESHOLD=0.05
SIZE_DIFF_ADJUSTMENT=0.9
COMPRESSION_VARIANCE_TOLERANCE=0.1

# === ANÁLISE NSFW OTIMIZADA ===
NSFW_HIGH_CONFIDENCE_THRESHOLD=0.92
NSFW_MEDIUM_CONFIDENCE_THRESHOLD=0.80
NSFW_LOW_CONFIDENCE_THRESHOLD=0.65
NSFW_SMALL_IMAGE_THRESHOLD=30000

# Scores calibrados
NSFW_NEUTRAL_SCORE=0.85
NSFW_PORN_SCORE=0.01
NSFW_SEXY_SCORE=0.02
NSFW_HENTAI_SCORE=0.005
NSFW_DRAWING_SCORE=0.005

# === ANÁLISE DE JOGOS OTIMIZADA ===
GAMES_DETECTION_THRESHOLD=0.4
GAMES_RESOLUTION_MIN_WIDTH=1024
GAMES_RESOLUTION_MIN_HEIGHT=576
GAMES_ASPECT_RATIO_MIN=1.4
GAMES_ASPECT_RATIO_MAX=2.0
GAMES_FILE_SIZE_THRESHOLD=300000

# Scores ajustados
GAMES_RESOLUTION_SCORE=0.35
GAMES_ASPECT_RATIO_SCORE=0.25
GAMES_FILE_SIZE_SCORE=0.25
GAMES_PNG_FORMAT_SCORE=0.15

# === ANÁLISE DE SOFTWARE OTIMIZADA ===
SOFTWARE_DETECTION_THRESHOLD=0.6
SOFTWARE_FILE_SIZE_THRESHOLD=150000
SOFTWARE_RESOLUTION_MIN_WIDTH=800
SOFTWARE_RESOLUTION_MIN_HEIGHT=600

# Scores calibrados
SOFTWARE_FILE_SIZE_SCORE=0.45
SOFTWARE_RESOLUTION_SCORE=0.35
SOFTWARE_PNG_FORMAT_SCORE=0.20
SOFTWARE_CONFIDENCE_DEFAULT=0.75

# === CONFIGURAÇÕES OCR ===
# OCR habilitado
OCR_ENABLED=true
OCR_LANGUAGE=por+eng
OCR_CONFIDENCE_THRESHOLD=60
OCR_MAX_IMAGE_SIZE=5242880
OCR_RESIZE_MAX_WIDTH=2000
OCR_RESIZE_MAX_HEIGHT=2000

# Detecção de software via OCR
OCR_SOFTWARE_KEYWORDS=chrome,firefox,safari,edge,vscode,visual studio,notepad,word,excel,powerpoint,photoshop,illustrator,figma,slack,teams,zoom,discord,whatsapp,telegram
OCR_URL_PATTERNS=http,https,www.,\.com,\.org,\.net,\.br
OCR_DOMAIN_MIN_LENGTH=4
OCR_TEXT_MIN_LENGTH=10

# === ANÁLISE DE PRODUTIVIDADE OTIMIZADA ===
# Thresholds recalibrados
PRODUCTIVITY_VERY_HIGH_THRESHOLD=85
PRODUCTIVITY_HIGH_THRESHOLD=70
PRODUCTIVITY_MEDIUM_THRESHOLD=50
PRODUCTIVITY_LOW_THRESHOLD=30

# Períodos produtivos ajustados
PRODUCTIVE_PERIOD_THRESHOLD=40
HIGHLY_PRODUCTIVE_PERIOD_THRESHOLD=25
UNPRODUCTIVE_PERIOD_THRESHOLD=75

# === CONFIGURAÇÕES DE PROCESSAMENTO ===
IMAGE_EXTENSIONS=jpg,jpeg,png,webp,bmp,tiff
IMAGE_DEFAULT_WIDTH=1920
IMAGE_DEFAULT_HEIGHT=1080

# Filtros de exclusão otimizados
ZIP_EXCLUDE_PATTERNS=__MACOSX,.DS_Store,.tmp,.temp,thumbs.db

# === CONFIGURAÇÕES DE RESPOSTA ===
DECIMAL_PRECISION=2
CONFIDENCE_PRECISION=3
TIME_PRECISION=1

# === MENSAGENS OTIMIZADAS ===
MSG_CRITICAL_IDLENESS=Ociosidade crítica detectada. Tela praticamente inalterada por período prolongado.
MSG_HIGH_IDLENESS=Alta ociosidade detectada. Poucas mudanças visuais significativas.
MSG_MODERATE_IDLENESS=Atividade moderada. Algumas mudanças detectadas mas com períodos de inatividade.
MSG_GOOD_ACTIVITY=Boa atividade detectada. Mudanças regulares e consistentes na tela.
MSG_HIGH_ACTIVITY=Alta atividade detectada. Mudanças frequentes e significativas.

# Níveis de produtividade
PRODUCTIVITY_LEVEL_VERY_HIGH=Excelente
PRODUCTIVITY_LEVEL_HIGH=Boa
PRODUCTIVITY_LEVEL_MEDIUM=Regular
PRODUCTIVITY_LEVEL_LOW=Insuficiente
PRODUCTIVITY_LEVEL_VERY_LOW=Crítica

# Níveis de atividade por hora
ACTIVITY_LEVEL_VERY_LOW=inativo
ACTIVITY_LEVEL_LOW=baixo
ACTIVITY_LEVEL_MODERATE=moderado
ACTIVITY_LEVEL_HIGH=alto
ACTIVITY_LEVEL_VERY_HIGH=muito_alto

# === CONFIGURAÇÕES AVANÇADAS OTIMIZADAS ===
# Hash de imagem melhorado
HASH_SAMPLE_DIVISOR=500
HASH_SHIFT_BITS=3
HASH_MULTIPLE_REGIONS=true
HASH_REGION_COUNT=4

# Análise temporal aprimorada
TIMESTAMP_REGEX=_(\d{14})
TIMESTAMP_FORMAT=%Y%m%d%H%M%S
TIMESTAMP_TOLERANCE_SECONDS=30

# Limites de processamento otimizados
MAX_IMAGES_PER_ZIP=50
MAX_PROCESSING_TIME_SECONDS=180
MEMORY_LIMIT_MB=256

# Filtros de qualidade
MIN_IMAGE_SIZE=1024
MAX_IMAGE_SIZE=10485760
MIN_IMAGE_DIMENSION=100
SKIP_CORRUPTED_IMAGES=true

# === CONFIGURAÇÕES DE LOG ===
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(levelname)s - %(message)s
LOG_MAX_SIZE=5242880
LOG_BACKUP_COUNT=3

# === CONFIGURAÇÕES DE PERFORMANCE ===
ENABLE_CACHING=true
CACHE_SIZE_MB=64
PARALLEL_PROCESSING=false
BATCH_SIZE=10

# === CONFIGURAÇÕES DE VALIDAÇÃO ===
VALIDATE_IMAGE_HEADERS=true
VALIDATE_TIMESTAMPS=true
VALIDATE_FILE_INTEGRITY=true
SKIP_INVALID_FILES=true
